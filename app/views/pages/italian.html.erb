  <!-- ======= Header ======= -->
  <header id="header">
    <div class="container">

<row>

      <div id="logo" class="pull-left">
        <%= link_to image_tag("logo.jpg", size: "90x80", id: "logo", alt: "4 for English logo"), root_path %>
      </div>
</row>
      <nav id="nav-menu-container">
        <ul class="nav-menu">
          <li class="menu-active"><%= link_to "Home", root_path %> </li>
        </ul>
      </nav><!-- #nav-menu-container -->
    </div>
  </header>

  <!-- End Header -->


  <!-- Lessons -->

  <section id="services">
    <div class="container">
      <div class="section-header">
        <h2>Italian words and gestures Beginner course <br> 10/15 hours</h2>
        <p class="text-justify"> I have designed an interactive course here for you. Experience connecting Italian
phrases and words to their gestures in the comfort of your home or workplace.
You will not only learn interesting things about <strong>culture, food and places</strong>: you will
also laugh together with your friends trying out and understanding the meanings of the <strong>most popular Italian gestures</strong>.<br>
The classes will hold from 4 to 8 people at an established time and will last one hour
per each lesson. <br>Look at my trailer video and participate the Beginner Course.
Turn your lessons into real experience and then why not visit me in Italy. I will be
waiting for you! Write me here below to book. </p>
      </div>



    </div>
    </section><!-- End About Section -->


    <!-- ======= Contact Section ======= -->
    <section id="contact">
      <div class="container">
        <div class="section-header">
          <h2>Contact me</h2>
        </div>

        <div class="row contact-info">

        </div>
          <div class="form">
            <%= form_with scope: :article, url: articles_path, class: "php-email-form", local: true do |f| %>
              <div class="form-row">
                <div class="form-group col-md-6">
                  <%= f.text_field :name, id: "name", class: "form-control", placeholder: "Your Name" %>
                  <div class="validate"></div>
                </div>
                <div class="form-group col-md-6">
                  <%= f.text_field :email, id: "email", class: "form-control", placeholder: "Your Email" %>
                  <div class="validate"></div>
                </div>
              </div>
              <div class="form-group">
                <%= f.text_field :subject, id: "subject", class: "form-control", placeholder: "Subject" %>
                <div class="validate"></div>
              </div>
              <div class="form-group">
                <%= f.text_area :message, id: "message", class: "form-control", rows: 5, placeholder: "Message" %>
                <div class="validate"></div>
              </div>
              <div class="form-group row justify-content-center">
                <%= f.submit class: "button", value: "Send Message" %>
                <% end %>
              </div>
          </div>
      </div>
    </section><!-- End Contact Section -->

    <!-- ======= Footer ======= -->

    <footer id="footer">
