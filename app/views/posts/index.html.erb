</head>

<body>
  <!-- ======= Header ======= -->
  <header id="header">
    <div class="container">


      <div id="logo" class="pull-left">
        <%= link_to image_tag("logo.jpg", size: "100x90", id: "logo", alt: "4 for English logo"), root_path %>
      </div>

      <nav id="nav-menu-container">
        <ul class="nav-menu">
          <li class="menu-active"><%= link_to "Home", root_path %> </li>
        </ul>
      </nav><!-- #nav-menu-container -->
    </div>
  </header>

  <!-- End Header -->

  <div class="area">
    <div class="context">
      <div class="container rounded" style="background-color: white; width: 50%">
        <h1 style="font-size:5vw;">Welcome to the <br/> <span id="forenglish">4 FOR ENGLISH</span> Blog</h1>
      </div>
   </div>
  </div >

  <section id="services">
    <div class="container">
      <div class="row">
        <% @posts.each do |post| %>
          <div class="card-deck mb-4 mx-auto">
            <div class="card courses">
              <%= cl_image_tag("4forenglish/blog#{rand(1..8)}", cloud_name: 'dp5r9jn8g', alt: "English", class: "card-img-top") %>
              <div class="card-body">
                <h5 class="card-title"><%= link_to post.title, post %> </h5>
              </div>
              <p class="card-text ml-3">Posted <%= post.created_at.strftime("%d %b. %Y") %></p>
              <p class="card-text mr-1 mb-1"><small class="text-muted float-right"><%= link_to "Read more â–º", post %></small></p>
            </div>
          </div>
        <% end %>
      </div>
    </div>



  </section><!-- End About Section -->


    <!-- ======= Contact Section ======= -->
    <section id="contact">
      <div class="container mt-4">
        <div class="section-header">
          <u><h4>To know more or suggest me new topics, contact me here</h4></u>
        </div>
        <%= render 'shared/form' %>
      </div>
    </section><!-- End Contact Section -->

    <!-- ======= Footer ======= -->
    <%= render 'shared/footer' %>
    <!-- End Footer -->


  </body>

  </html>
