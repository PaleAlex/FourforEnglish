<h1>Editing Post</h1>

<div class="container">
	<div class= "row justify-content-center">
		<div class= "col-10">
			<%= form_with(model: @post, class: "shadow p-3 mb-3 bg-secondary rounded", local: true) do |f| %>
        <div class="form-group row">
          <div class="col-10 offset-1">
            <%= f.text_field :title, class: "form-control shadow rounded", placeholder: "Titolo" %>
          </div>
        </div>

				<div class="form-group row">
					<div class="col-10 offset-1">
						<%= f.text_area :description, rows:10, class: "form-control shadow rounded", placeholder: "Post" %>
					</div>
				</div>
				<div class="form-group row justify-content-center">
					<%= f.submit class: "btn btn-outline-light btn-lg", value: "Modifica" %>
				</div>
			<% end %>
		</div>
	</div>
</div>

<%= link_to 'Show', @post %> |
<%= link_to 'Back', posts_path %>
